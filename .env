# ============================================
# TIMEZONE CONFIGURATION
# ============================================
GENERIC_TIMEZONE=Asia/Jakarta
TZ=Asia/Jakarta

# ============================================
# N8N CONFIGURATION
# ============================================
WEBHOOK_URL=https://n8n.yourdomain.com
N8N_HOST=n8n.yourdomain.com
N8N_PROTOCOL=https
N8N_PORT=5678

# N8N Security & Features
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_ENABLED=true
N8N_PROXY_HOPS=1
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_TEMPLATES_ENABLED=false

# N8N SQLite Configuration
DB_SQLITE_POOL_SIZE=5
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# N8N Data Folder
# Windows: use path like C:/Development/n8n_data
# Linux/Mac: use ./n8n_data or /path/to/n8n_data
# Docker volume: use n8n_data
DATA_FOLDER=C:/Development/n8n_data

# ============================================
# CLOUDFLARE TUNNEL CONFIGURATION
# ============================================
# Get token from: cloudflared tunnel token <tunnel-name>
CLOUDFLARED_TOKEN=your_token_here
